<div class="card shadow-lg" style="width: 350px; height: 500px;">

    <div id="chatDialogsList" class="h-100">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="mb-0">
                Техническая поддержка
            </h6>
        </div>

        {# Список диалогов #}

        <div class="card-body p-0" style="height: 440px; overflow-y: auto;">

            {% for item in query.data %}

                <div id="{{ item.id }}"  class="border-bottom p-3 offcanvas-link" style="cursor: pointer;"

                     data-bs-toggle="#offcanvas"
                     data-bs-target="#offcanvas"
                     role="button"
                     aria-controls="offcanvas"
                     data-href="{{ path('support:admin.detail', { id: item.event }) }}"

                >
                    <div class="d-flex align-items-center">
                        <div class="bg-primary rounded-circle p-2 me-3 text-white d-flex">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                            </svg>
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="mb-0 fw-medium"> {{ item.typeProfileName }} : {{ item.name }}</h6>
                                <span class="small text-muted ">{{ item.messageDate|date('H:i') }} </span>
                            </div>
                            <p class="text-muted mb-0 small text-truncate" style="max-width: 220px;">{{ item.message }}</p>
                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>

    </div>

</div>


<script async nonce='{{ csp_nonce() }}' data-src="/assets/js/script.min.js?v={{ version }}" class='lazy'></script>
