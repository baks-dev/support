{% trans_default_domain 'support.admin' %}

{% set user = form.vars.data %}

<div class="tab-content" id="token_tab_content">

    {# ОСНОВНЫЕ НАСТРОЙКИ #}
    <div class="tab-pane fade show active" id="tab_token" role="tabpanel">

        <div class="flex-fill d-flex justify-content-around pb-3  gap-3" data-buttons="true">
            <label class="p-3 border-dotted rounded-3 w-100">
                <div class="">
                    <div class="mb-2">
                        <span class="me-1 text-muted">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15"
                                 viewBox="0 0 24 24" fill="none"
                            >
                                <path opacity="0.3"
                                      d="M22 12C22 17.5 17.5 22 12 22C6.5 22 2 17.5 2 12C2 6.5 6.5 2 12 2C17.5 2 22 6.5 22 12ZM12 7C10.3 7 9 8.3 9 10C9 11.7 10.3 13 12 13C13.7 13 15 11.7 15 10C15 8.3 13.7 7 12 7Z"
                                      fill="currentColor"
                                ></path>
                                <path d="M12 22C14.6 22 17 21 18.7 19.4C17.9 16.9 15.2 15 12 15C8.8 15 6.09999 16.9 5.29999 19.4C6.99999 21 9.4 22 12 22Z"
                                      fill="currentColor"
                                ></path>
                            </svg>
                        </span>
                        <span class="align-middle">{{ user.name }}</span>
                    </div>

                    <div class="alert alert-light" role="alert">
                        {{ user.message|raw }}
                    </div>

                    <div class="d-flex justify-content-end py-1">
                        <span class="fst-italic">{{ user.date | date("d.m.Y H:i") }}</span>
                    </div>
                </div>


                {% if user.reply.name is empty %}
                    <div class="my-2">
                        {{ form_row(form.reply.name, { label: 'Имя администратора' }) }}
                    </div>
                {% else %}
                    <span class="me-1 text-muted">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15"
                             viewBox="0 0 24 24" fill="none"
                        >
                            <path opacity="0.3"
                                  d="M22 12C22 17.5 17.5 22 12 22C6.5 22 2 17.5 2 12C2 6.5 6.5 2 12 2C17.5 2 22 6.5 22 12ZM12 7C10.3 7 9 8.3 9 10C9 11.7 10.3 13 12 13C13.7 13 15 11.7 15 10C15 8.3 13.7 7 12 7Z"
                                  fill="currentColor"
                            ></path>
                            <path d="M12 22C14.6 22 17 21 18.7 19.4C17.9 16.9 15.2 15 12 15C8.8 15 6.09999 16.9 5.29999 19.4C6.99999 21 9.4 22 12 22Z"
                                  fill="currentColor"
                            ></path>
                        </svg>
                    </span>
                    <span class="align-middle">{{ user.reply.name }}</span>
                {% endif %}

                <div class="my-2">{{ form_row(form.reply.message) }}</div>
            </label>
        </div>
    </div>
</div>





